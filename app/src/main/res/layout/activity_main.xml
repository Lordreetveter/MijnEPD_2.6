<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_achtergrond"
    tools:context="com.example.floorvanlieshout.myfirstapp.MainActivity">

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/buttonNieuweNotitie"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:clickable="true"
        android:cropToPadding="true"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp"
        android:visibility="invisible"
        app:backgroundTint="@color/colorButtonMenu"
        app:elevation="4dp"
        app:fabSize="mini"
        app:layout_constraintBottom_toTopOf="@+id/buttonNieuweFoto"
        app:layout_constraintRight_toRightOf="parent"
        app:rippleColor="@android:color/white"
        app:srcCompat="@drawable/ic_note_add_white_24px" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:clickable="true"
        android:onClick="makeMenuVisible"
        app:backgroundTint="@color/colorButtonMenu"
        app:fabSize="mini"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:rippleColor="@color/colorButtonMenu"
        app:srcCompat="@drawable/ic_plus_icoon" />

    <ImageView
        android:id="@+id/imageView_lege_bestanden"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="120dp"
        app:layout_constraintHorizontal_bias="0.476"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/document_button_2" />

    <TextView
        android:id="@+id/textView_geen_bestanden"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="7dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="7dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="U heeft nog geen documenten"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textSize="28sp"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView_lege_bestanden" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/buttonNieuweMap"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:clickable="true"
        android:cropToPadding="true"
        android:onClick="laatFotoZien"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp"
        android:visibility="invisible"
        app:backgroundTint="@color/colorButtonMenu"
        app:elevation="4dp"
        app:fabSize="mini"
        app:layout_constraintBottom_toTopOf="@+id/floatingActionButton"
        app:layout_constraintRight_toRightOf="parent"
        app:rippleColor="@android:color/white"
        app:srcCompat="@drawable/ic_photo_library_white_24px" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/buttonNieuweFoto"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:clickable="true"
        android:cropToPadding="true"
        android:onClick="maakFoto"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp"
        android:visibility="invisible"
        app:backgroundTint="@color/colorButtonMenu"
        app:elevation="4dp"
        app:fabSize="mini"
        app:layout_constraintBottom_toTopOf="@+id/buttonNieuweMap"
        app:layout_constraintRight_toRightOf="parent"
        app:rippleColor="@android:color/white"
        app:srcCompat="@drawable/ic_camera_alt_white_24px" />

    <TextView
        android:id="@+id/textKiesFoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="110dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/witte_achtergrond_button"
        android:visibility="invisible"
        android:padding="3dp"
        android:text="Kies foto"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/buttonNieuweMap" />

    <TextView
        android:id="@+id/textMaakFoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="48dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="7dp"
        android:background="@drawable/witte_achtergrond_button"
        android:visibility="invisible"
        android:padding="3dp"
        android:text="Nieuwe foto"
        app:layout_constraintBottom_toTopOf="@+id/textKiesFoto"
        app:layout_constraintRight_toLeftOf="@+id/buttonNieuweFoto" />

    <TextView
        android:id="@+id/textMaakNotitie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="45dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/witte_achtergrond_button"
        android:visibility="invisible"
        android:padding="3dp"
        android:text="Nieuwe notitie"
        app:layout_constraintBottom_toTopOf="@+id/textMaakFoto"
        app:layout_constraintRight_toLeftOf="@+id/buttonNieuweNotitie" />

</android.support.constraint.ConstraintLayout>
