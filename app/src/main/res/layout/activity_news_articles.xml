<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.floorvanlieshout.myfirstapp.NewsArticles">

    <FrameLayout
    android:layout_width="368dp"
    android:layout_height="495dp"
        tools:layout_editor_absoluteX="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/verander_layout"></FrameLayout>

    <Button
        android:id="@+id/verander_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="veranderFragment"
        android:text="Verander"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>
